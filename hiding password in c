// the cprogram for hiding password

#include<stdio.h>
#include<conio.h>
void main(){
    int i;
    char pw[5];
    printf("Note:\n 1) 5 characters with special  characters including spaces\n");
    printf("enter password to set\n");
    for(i=0;i<=4;i++){
        pw[i]=getch();//getch returns the ascii code
        printf("*");
    }
printf("\npress enter to check your password");
getch();
printf(" entered password is : %s",pw);
    
}

/*NOTE: in most of the online compiler doesnt have conio.h header file
these conio function available in compilers like turbo c++*/
